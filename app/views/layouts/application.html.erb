<!DOCTYPE html>
<html>
  <head>
    <title>Flatiron Tunes</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
    <%= link_to 'All Artists', artists_path %> &emsp;
    <%= link_to 'Create Artist', new_artist_path(@artist)%> &emsp;
    <%= link_to 'All Songs', songs_path %> &emsp;
    <%= link_to 'Create Song', new_song_path(@artist)%> &emsp;
    <%= yield %>
  </body>
</html>
